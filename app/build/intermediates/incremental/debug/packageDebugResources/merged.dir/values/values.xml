    <style name="Theme.Project" parent="Base.Theme.Project"/>
    <declare-styleable name="monthPickerDialog">

       
        <attr format="color" name="headerTitleColor"/>
        <attr format="color" name="headerBgColor"/>
        <attr format="color" name="headerFontColorSelected"/>
        <attr format="color" name="headerFontColorNormal"/>
        
        <attr format="color" name="monthBgColor"/>
        <attr format="color" name="monthBgSelectedColor"/>
        <attr format="color" name="monthFontColorSelected"/>
        <attr format="color" name="monthFontColorNormal"/>
